@model IEGen.Models.ViewSkillGroupViewModel

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="PViewTitle">Skill Group Details</h4>
    </div>
    <div class="modal-body form-panel-body row">

        @if (Model.IsLocal)
        {
            <div class="col-xs-12">
                <label class="control-label">School</label>
                <p class="control-static">@Model.SchoolName</p>
                <div class="fm-sp"></div>
            </div>
        }

        <div class="col-sm-6">
            <label class="control-label">Group Name</label>
            <p class="control-static">@Model.DisplayName</p>
            <div class="fm-sp"></div>
        </div>
        <div class="col-sm-6">
            <label class="control-label">Status</label>
            <p class="control-static">@Model.Status</p>
            <div class="fm-sp"></div>
        </div>

        <div class="col-sm-6">
            <label class="control-label">Skill 1</label>
            <p class="control-static">@Model.Skill1</p>
            <div class="fm-sp"></div>
        </div>
        <div class="col-sm-6">
            <label class="control-label">Skill 2</label>
            <p class="control-static">@Model.Skill2</p>
            <div class="fm-sp"></div>
        </div>

        <div class="col-sm-6">
            <label class="control-label">Skill 3</label>
            <p class="control-static">@Model.Skill3</p>
            <div class="fm-sp"></div>
        </div>
        <div class="col-sm-6">
            <label class="control-label">Skill 4</label>
            <p class="control-static">@Model.Skill4</p>
            <div class="fm-sp"></div>
        </div>

        <div class="col-sm-6">
            <label class="control-label">Skill 5</label>
            <p class="control-static">@Model.Skill5</p>
            <div class="fm-sp"></div>
        </div>
        <div class="col-sm-6">
            <label class="control-label">Skill 6</label>
            <p class="control-static">@Model.Skill6</p>
            <div class="fm-sp"></div>
        </div>

        <div class="col-xs-12">
            <table id="pmDT" class="table table-hover table-bordered fullwidth" data-order="[]">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Grade Number</th>
                        <th>Grade Score</th>
                    </tr>
                </thead>
                <tbody id="pmDTBody">
                    @foreach (var pm in Model.GradeList)
                    {
                        <tr>
                            <td>@pm.Name</td>
                            <td>@pm.GradeNumber</td>
                            <td>@pm.FormattedScore</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
    <div class="modal-footer">
        <div id="MsgDiv"></div>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

        @if (Model.CanEdit)
        {
            @Html.ActionLink("Edit", "SkillSetup", new { SkillGroupID = Model.SkillGroupID }, new { @class = "btn btn-primary" })
        }
    </div>
</div>
