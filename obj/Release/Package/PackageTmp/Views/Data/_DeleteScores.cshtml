@model IEGen.Models.DeleteScoresViewModel

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="PViewTitle">Delete All Scores</h4>
    </div>
    <div id="BodyDiv">
        <div class="modal-body form-panel-body">

            <table id="pmDT" class="table table-hover table-bordered fullwidth" data-order="[]">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th># Subjects</th>
                        <th># Students</th>
                    </tr>
                </thead>
                <tbody id="pmDTBody">
                    @foreach (var pm in Model.Classes)
                    {
                        <tr>
                            <td>@pm.Name</td>
                            <td>@pm.SubjectCount</td>
                            <td>@pm.StudentCount</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <div class="modal-footer">
            <div id="MsgDiv"></div>
            <button type="button" class="btn btn-default bts" data-dismiss="modal">Close</button>

            <button id="DeleteBtn" class="btn btn-warning bts">Delete Only</button>

            <button id="DeleteRearrangeBtn" class="btn btn-danger bts">Delete and Rearrange</button>

        </div>
    </div>
</div>
