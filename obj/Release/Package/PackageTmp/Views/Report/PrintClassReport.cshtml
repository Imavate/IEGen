@section scripts
{
    @Scripts.Render("~/bundles/chart")

    <script type="text/javascript">

        var tbID = '#clDT';

        $(document).ready(function () {

            ShowGradeChart();

            ShowScoreChart();

            ShowCategoryChart();
        });

        var gCountA = @Model.GradeCountA;
        var gCountB = @Model.GradeCountB;
        var gCountC = @Model.GradeCountC;
        var gCountD = @Model.GradeCountD;
        var gCountE = @Model.GradeCountE;
        var gCountF = @Model.GradeCountF;
        function ShowGradeChart(){

            var gctx = $("#gradeChart");

            data = {
                datasets: [{
                    data: [gCountA, gCountB, gCountC, gCountD, gCountE, gCountF],
                    backgroundColor: ['#800080', '#0000FF', '#00FF00', '#FFFF00', '#FFA500', '#FF0000'],
                    borderColor: '#FF5A5E',
                    borderWidth: 1
                }],

                labels: ['A', 'B', 'C', 'D', 'E', 'F']
            };

            var chartOptions = {
                animation: false,
                devicePixelRatio: 2,
                legend: {
                    display: false
                },
                plugins: {
                    labels: [
                      //{
                      //    render: 'label',
                      //    fontColor: '#000',
                      //    position: 'outside'
                      //},
                      {
                          render: 'percentage',
                          fontStyle: 'bold',
                          fontColor: ['#fff', '#fff'],
                          precision: 2
                      }
                    ]
                }
            };

            var gradeChart = new Chart(gctx, {
                type: 'doughnut',
                data: data,
                options: chartOptions
            });
        }

        var subjects = @Html.Raw(Model.SubjectNames);
        var lowScores = @Model.LowestScores;
        var avgScores = @Model.AverageScores;
        var bestScores = @Model.BestScores;
        function ShowScoreChart(){

            var sctx = $("#scoreChart");

            var scoreChart = new Chart(sctx, {
                type: 'bar',
                data: {
                    labels: subjects,
                    datasets: [{
                        label: 'Lowest',
                        data: lowScores,
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255,99,132,1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Average',
                        data: avgScores,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Highest',
                        data: bestScores,
                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    title:{
                        display: true,
                        fontSize: 14,
                        fontColor: '#000',
                        text: 'Subject Performance Summary'
                    },
                    animation: false,
                    devicePixelRatio: 2,
                    scales: {
                        xAxes: [{
                            ticks: {
                                autoSkip: false
                            }
                        }],
                        yAxes: [{
                            ticks: {
                                beginAtZero:true,
                                max: 100
                            }
                        }]
                    },
                    plugins: {
                        labels: [
                          {
                              render: 'value',
                              fontSize: 0
                          }
                        ]
                    }

                }
            });
        }

        var categories = @Html.Raw(Model.CategoryNames);
        var lowAverages = @Model.CatLowAverages;
        var meanAverages = @Model.CatMeanAverages;
        var bestAverages = @Model.CatBestAverages;
        function ShowCategoryChart(){

            var cctx = $("#categoryChart");

            var categoryChart = new Chart(cctx, {
                type: 'bar',
                data: {
                    labels: categories,
                    datasets: [{
                        label: 'Lowest Average',
                        data: lowAverages,
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255,99,132,1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Mean Average',
                        data: meanAverages,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Best Average',
                        data: bestAverages,
                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    title:{
                        display: true,
                        fontSize: 14,
                        fontColor: '#000',
                        text: 'Subject Category Performance Summary'
                    },
                    animation: false,
                    devicePixelRatio: 2,
                    scales: {
                        xAxes: [{
                            ticks: {
                                autoSkip: false
                            }
                        }],
                        yAxes: [{
                            ticks: {
                                beginAtZero:true,
                                max: 100
                            }
                        }]
                    },
                    plugins: {
                        labels: [
                          {
                              render: 'value',
                              fontSize: 10
                          }
                        ]
                    }

                }
            });
        }
    </script>
}

