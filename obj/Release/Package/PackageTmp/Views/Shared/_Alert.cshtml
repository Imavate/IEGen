@model IEGen.Models.AlertViewModel

@{
    foreach (var item in Model.Alerts.OrderBy(a => a.AlertType))
    {
        string divClass = item.DivClass + " alert-dismissible fade in";
        <div class="@divClass" style="margin-bottom: 10px; display:none;" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <ul class="fa-ul">
                <li style="font-size: larger; text-align: left;">
                    <i class="@item.FullIconClass" aria-hidden="true"></i>
                    <span style="font-size:smaller;">@Html.Raw(@item.AlertText)</span>
                </li>
            </ul>
        </div>
    }
}

